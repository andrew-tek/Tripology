<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="10sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_margin="10sp"
        android:text="Enter Information About Your Trip"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_weight="20"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0sp">
        <TextView
            android:text="Destination"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@drawable/edittext_border_style"
            android:paddingLeft="7sp"
            android:id="@+id/editTextDestination"
            android:textColor="#000000"
            android:textSize="20sp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Air Fare ($)"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@drawable/edittext_border_style"
            android:id="@+id/editTextAirFare"
            android:paddingLeft="7sp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Trip Duration (days)"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@drawable/edittext_border_style"
            android:id="@+id/editTextTripDuration"
            android:paddingLeft="7sp"
            android:textColor="#000000"
            android:inputType="number"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Currency Name"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@drawable/edittext_border_style"
            android:id="@+id/editTextCurrencyName"
            android:inputType="text"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Currency Rate ($1 = ?)"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@drawable/edittext_border_style"
            android:textSize="20sp"
            android:paddingLeft="7sp"
            android:inputType="numberDecimal"
            android:id="@+id/editTextCurrenyRate"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:text="Back"
            android:background="#969b9a"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="10sp"
            android:id="@+id/buttonBack"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="Continue"
            android:layout_marginRight="10sp"
            android:id="@+id/buttonContinue"
            android:background="#f95959"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


</LinearLayout>