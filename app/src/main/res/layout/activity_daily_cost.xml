<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="10sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_margin="10sp"
        android:text="Enter The Daily Cost For The Trip"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_weight="20"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0sp">
        <TextView
            android:text="Hotel ($)"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@drawable/edittext_border_style"
            android:paddingLeft="7sp"
            android:id="@+id/editTextHotel"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Food ($)"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@drawable/edittext_border_style"
            android:paddingLeft="7sp"
            android:id="@+id/editTextFood"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Entertainment/Shopping ($)"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@drawable/edittext_border_style"
            android:id="@+id/editTextEntertainment"
            android:paddingLeft="7sp"
            android:inputType="numberDecimal"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Transportation ($)"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@drawable/edittext_border_style"
            android:paddingLeft="7sp"
            android:textSize="20sp"
            android:inputType="numberDecimal"
            android:id="@+id/editTextTransportation"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Misc. ($)"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@drawable/edittext_border_style"
            android:paddingLeft="7sp"
            android:id="@+id/editTextMisc"
            android:inputType="numberDecimal"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:text="Back"
            android:background="#969b9a"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="10sp"
            android:id="@+id/buttonDailyCostBack"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="View Plan"
            android:id="@+id/buttonViewPlan"
            android:layout_marginRight="10sp"
            android:background="#f95959"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


</LinearLayout>