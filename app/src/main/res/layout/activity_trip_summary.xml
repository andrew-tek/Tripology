<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">
    <LinearLayout
        android:layout_weight="30"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0sp">
        <TextView
            android:id="@+id/textViewDestination"
            android:layout_margin="10sp"
            android:textSize="30sp"
            android:textColor="#000000"
            android:text="Trip Summary"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="80"
        android:layout_width="match_parent"
        android:layout_height="0sp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Destination: "
                android:layout_margin="10sp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textViewSummaryDestination"
                android:textStyle="bold"
                android:textColor="#f95959"
                android:text="Hawaii"
                android:layout_marginTop="10sp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Duration of Trip: "
                android:layout_margin="10sp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textViewDurationOfTrip"
                android:textStyle="bold"
                android:textColor="#f95959"
                android:text="7 Days"
                android:layout_marginTop="10sp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Grand Total: "
                android:layout_margin="10sp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textViewGrandTotal"
                android:textStyle="bold"
                android:textColor="#f95959"
                android:text="$2000"
                android:layout_marginTop="10sp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Cost Per Day: "
                android:layout_margin="10sp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textViewDailyCost"
                android:textStyle="bold"
                android:textColor="#f95959"
                android:text="$150"
                android:layout_marginTop="10sp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Cost Per Day in Currency: "
                android:layout_margin="10sp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textViewSummaryCurrency"
                android:textStyle="bold"
                android:textColor="#f95959"
                android:text="150 Batt"
                android:layout_marginTop="10sp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_weight="15"
        android:layout_width="wrap_content"
        android:layout_height="0sp">
        <Button
            android:layout_margin="10sp"
            android:layout_alignParentLeft="true"
            android:text="Edit Plan"
            android:background="#969b9a"
            android:textColor="#FFFFFF"
            android:id="@+id/buttonTripSummaryBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_margin="10sp"
            android:padding="10sp"
            android:layout_alignParentRight="true"
            android:id="@+id/buttonTripSummaryInputBudget"
            android:text="Start Savings Plan"
            android:background="#f95959"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>

</LinearLayout>